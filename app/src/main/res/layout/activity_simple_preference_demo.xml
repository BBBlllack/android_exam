<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exam6.SimplePreferenceDemo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="210236 申洪建 实验6.1"
            android:textColor="@color/design_default_color_error"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/exam6_share_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示读取的信息"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/exam6_share_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这里输入保存的信息" />

        <Button
            android:id="@+id/exam6_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存到SharePreference" />

        <Button
            android:id="@+id/exam6_read_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取SharePreference" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>