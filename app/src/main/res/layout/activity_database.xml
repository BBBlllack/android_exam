<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".exam6.DatabaseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:text="210236 申洪建 实验6.4"
            android:textColor="@color/design_default_color_error"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/exam6_sql_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入用户名" />

        <EditText
            android:id="@+id/exam6_sql_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入用户邮箱" />

        <Button
            android:id="@+id/exam6_insert_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插入用户信息" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/exam6_del_id"
                android:text="请输入你要删除的id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/exam6_del_btn"
                android:text="按id删除"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/exam6_query_name"
                android:text="查询字段"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/exam6_query_name_btn"
                android:text="按名称查询"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/exam6_query_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询所有用户信息" />

        <TextView
            android:id="@+id/exam6_display_all"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里展示查询的用户信息" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>